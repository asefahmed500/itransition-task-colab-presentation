# MongoDB Connection String
MONGODB_URI=mongodb://localhost:27017/slidesync

# Socket.io URL (in development, same as app URL)
NEXT_PUBLIC_SOCKET_URL=http://localhost:3000

# App URL
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Server port
PORT=3000

# JWT Secret for authentication (generate a strong random string)
JWT_SECRET=your_jwt_secret_key_here

# Cookie settings
COOKIE_NAME=slidesync_auth
COOKIE_SECRET=your_cookie_secret_key_here

# Optional: Set this to true to enable debug logging
DEBUG_MODE=false

